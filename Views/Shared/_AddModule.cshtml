@model List<EV.Models.CourseModule>
<table id="ExTable" class="table table-bordered">
    <thead>
        <tr>
            <th>Modile Name</th>
            <th>Module Duration</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>
                    <input type="text" name="Modules[@i].ModuleName" value="@Model[i].ModuleName" />
                </td>
                <td>
                    <input type="number" name="Modules[@i].Duration" value="@Model[i].Duration" />
                </td>
                <td>
                    <button onclick="DeleteI" class="btn btn-danger" type="button">
                        Remove
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
<input type="hidden" id="HIndex" value="@Model.Count" />


